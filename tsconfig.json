{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es5",
        "module": "nodenext",
        "types": [
            "node",
            "cypress"
        ],
        "lib": [
            "dom",
            "ESNext",
            "es5",
        ]
    },
    "exclude": [
        "lib/**/*.test.ts"
    ],
    "include": [
        "**/*.ts",
        "cypress/support/index.js"
    ]
}